<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fontFamily="@font/roboto_thin"
        android:src="@drawable/gosecuri"
        />

    <TextView
        android:id="@+id/text_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/image_view"
        android:textSize="26dp"
        android:maxLines="5"
        android:layout_margin="5dp"
        android:fontFamily="@font/roboto_thin"
        />

    <Button
        android:id="@+id/capture_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detect_text_image_btn"
        android:layout_marginBottom="10dp"
        android:background="@color/Blue"
        android:fontFamily="@font/roboto_thin"
        android:text="Prendre une photo"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_identity"
        android:layout_marginBottom="10dp"
        android:background="@color/green"
        android:fontFamily="@font/roboto_thin"
        android:text="Quitter"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/detect_text_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Détecter les informations"
        android:textAllCaps="false"
        android:background="@color/green"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:layout_above="@+id/check_identity"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/roboto_thin"
        />

    <Button
        android:id="@+id/check_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Blue"
        android:text="Vérifier l'identité en base de donnée"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="17dp"
        android:visibility="invisible"
        android:fontFamily="@font/roboto_thin"
        />

    <Button
        android:id="@+id/own_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue"
        android:text="Prendre une photo de vous"
        android:layout_above="@+id/detect_text_image_btn"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:textSize="17dp"
        android:visibility="invisible"
        android:fontFamily="@font/roboto_thin"
        />

</RelativeLayout>